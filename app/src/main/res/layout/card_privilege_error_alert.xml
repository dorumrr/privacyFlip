<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/privilegeErrorAlertCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/error_red"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/privilegeErrorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Root or Shizuku Required"
            android:textSize="16sp"
            android:textColor="@color/icon_white"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/privilegeErrorDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Flip requires root access (via Magisk) or Shizuku (for non-rooted devices) to control privacy features."
            android:textSize="12sp"
            android:textColor="@color/icon_white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

