<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Pure Android theme - NO GOOGLE DEPENDENCIES -->
    <!-- Dark theme variant -->
    <style name="Theme.PrivacyFlip" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Pure Android colors -->
        <item name="android:colorPrimary">@color/trust_blue</item>
        <item name="android:colorPrimaryDark">@color/trust_blue_dark</item>
        <item name="android:colorAccent">@color/trust_blue</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- AppCompat color attributes for better compatibility -->
        <item name="colorPrimary">@color/trust_blue</item>
        <item name="colorPrimaryDark">@color/trust_blue_dark</item>
        <item name="colorAccent">@color/trust_blue</item>
        
        <!-- Edge-to-edge support (status bar transparency) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Dark mode: use light icons on dark background -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>

