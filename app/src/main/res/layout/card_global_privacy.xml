<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/globalPrivacyCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/success_green"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Check Icon -->
        <ImageView
            android:id="@+id/globalPrivacyIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/icon_white" />

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/globalPrivacyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrivacyFlip"
                android:textSize="16sp"
                android:textColor="@color/icon_white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/globalPrivacyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protection Active"
                android:textSize="14sp"
                android:textColor="@color/icon_white"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Toggle Switch -->
        <Switch
            android:id="@+id/globalPrivacySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
