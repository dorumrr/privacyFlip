<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="6dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Open source message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/open_source_message"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:gravity="center" />

    <!-- Donate Button -->
    <Button
        android:id="@+id/donateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate ♥️"
        android:textSize="14sp"
        android:textColor="@color/donate_button_text"
        android:backgroundTint="@color/donate_button_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- First row: Late nights for brighter days. -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Late nights for brighter days."
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:gravity="center" />

    <!-- Second row: Created by Doru Moraru -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by "
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/createdByText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doru Moraru"
            android:textSize="12sp"
            android:textColor="@color/trust_blue"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

    </LinearLayout>

</LinearLayout>
