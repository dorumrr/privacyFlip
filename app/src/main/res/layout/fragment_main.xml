<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Error Message Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/errorCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:background="@color/background_error"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_warning"
                    android:tint="@color/error_red" />

                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/error_red"
                    tools:text="Error message" />

                <Button
                    android:id="@+id/dismissErrorButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dismiss"
                    android:textColor="@color/error_red"
                    android:background="?android:attr/selectableItemBackground" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Global Privacy Status Card (always visible) -->
        <include
            android:id="@+id/globalPrivacyCard"
            layout="@layout/card_global_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Main Content Container -->
        <LinearLayout
            android:id="@+id/mainContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Screen Lock Config Card -->
            <include
                android:id="@+id/screenLockCard"
                layout="@layout/card_screen_lock_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Experimental Features Card -->
            <include
                android:id="@+id/experimentalFeaturesCard"
                layout="@layout/card_experimental_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Timer Settings Card -->
            <include
                android:id="@+id/timerCard"
                layout="@layout/card_timer_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Background Permission Error Card (shown only when permission missing) -->
            <include
                android:id="@+id/backgroundPermissionErrorCard"
                layout="@layout/card_background_permission_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <!-- System Requirements Card (shown when no root) -->
        <include
            android:id="@+id/systemRequirementsCard"
            layout="@layout/card_system_requirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Universal Credits Footer -->
        <include
            android:id="@+id/creditsFooter"
            layout="@layout/credits_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
